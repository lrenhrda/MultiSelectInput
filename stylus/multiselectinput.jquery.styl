.js-multiselectinput {
  position: relative
  width: 100%
  height: 30px
  line-height: 30px
  display: flex
  flex-direction: row
  margin: 0
  font: inherit
  color: inherit
  text-transform: none
  -webkit-appearance: textfield

  select[multiple] {
    width: 0px
    height: 0px
    position: absolute
    left: -9999px
    -webkit-appearance: listbox

    &:focus {
      left: 0
      top: 100%
      width: 100%
      height: 8em
      z-index: 1000
    }
  }

  &[data-ios] {
    select[multiple],
    select[multiple]:focus {
      width: 0px
      height: 0px
      position: absolute
      left: -9999px
    }
  }

  &[data-android] {
    select[multiple]:focus {
      width: 100%;
      height: 8em;
      size: 5;
      left: 0;
      top: 100%;
      z-index: 1000;
    }
  }

  input.js-multiselectinput__input {
    z-index: 0;
    flex: 1 1 auto;
    line-height: inherit;
    border: none;
    height: 100%;
    box-sizing: border-box;
    /*padding: 0;*/
    margin: 0;
    -webkit-appearance: none;
    background: transparent;
    border-radius: 0;
  }

  button {
    border: none;
    background: none;
    padding: 0;
    line-height: inherit;
    font-size: 1em;

    &.js-multiselectinput__pick {
      height: 100%;
      padding: 0 .5em;
      z-index: 1;
      flex: 0 1 auto;
      line-height: inherit;
      font-size: .8em;
      background: rgba(0,0,0,.05);
      min-width: 30px;
    }

    &.js-multiselectinput__add {
      text-align: center;
      min-width: 30px;
      height: 100%;
      z-index: 1;
      flex: 0 1 auto;
      font-size: .6em;
      background: rgba(0,0,0,.05);
    }

    &[disabled] .js-multiselectinput__icon {
      opacity: .25;
    }
  }

  .js-multiselectinput__icon {
    width: 1em;
    height: 1em;
  }

  .js-multiselectinput__count {
    text-align: center;
  }

  &[data-expanded] {
    outline-width: -webkit-control;
    outline-color: -webkit-focus-ring-color;

    button.js-multiselectinput__pick {
      background: silver;
      color: white;
    }
  }
}